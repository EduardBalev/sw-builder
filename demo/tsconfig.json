{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "sw-builder": ["../src/interfaces/public-api"]
    }
  },
  "include": ["./**/*", "../src/**/*"],
  "exclude": ["node_modules", "dist"]
}

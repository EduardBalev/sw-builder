{
  "extends": "../tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
